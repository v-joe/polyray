// Set up the camera
viewpoint {
   from <0, 5, -5>
   at   <0, 0,  0>
   up   <0, 1,  0>
   angle 30
   resolution 160, 160
   }

// Get various surface finishes
include "../colors.inc"

// Set up background color & lights
background sky_blue
light <10, 10, -20>

object {
   torus 1, 0.5, <0, 0, 0>, <0, 0, 1>
   shiny_red
   rotate <70, 20, 0>
   }
